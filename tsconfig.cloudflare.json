{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "webworker"],
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.html"],
    "exclude": ["node_modules"]
}
